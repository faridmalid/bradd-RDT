{
  "name": "@bradd-rdt/client",
  "version": "1.0.0",
  "main": "index.ts",
  "scripts": {
    "start": "ts-node src/index.ts",
    "build": "tsc",
    "package": "tsc && copy src\\InputHelper.exe dist\\InputHelper.exe && pkg . --out-path build"
  },
  "bin": "dist/index.js",
  "pkg": {
    "assets": [
      "dist/InputHelper.exe",
      "node_modules/screenshot-desktop/**/*",
      "node_modules/systeminformation/**/*"
    ],
    "targets": [
      "node18-win-x64"
    ]
  },
  "dependencies": {
    "screenshot-desktop": "^1.15.0",
    "simple-peer": "^9.11.1",
    "socket.io-client": "^4.7.2",
    "systeminformation": "^5.21.8",
    "werift": "^0.19.3"
  },
  "devDependencies": {
    "@types/node": "^20.5.9",
    "@types/simple-peer": "^9.11.5",
    "pkg": "^5.8.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  }
}
